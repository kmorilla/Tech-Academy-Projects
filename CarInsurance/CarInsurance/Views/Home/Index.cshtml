

<div class="jumbotron jumbotron-fluid text-center">
    <h1>Car Insurance Quote!</h1>
    <h3>Enter your information for an Insurance Quote</h3>
</div>

<div class="container">
    <div class="row no-gutters text-center">
        <div class="card w-75 mx-auto mb-2">
            <div class="card-body">
                @using (Html.BeginForm("InsuranceQuote", "Home", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group col-6">
                            <p>First Name</p>
                            <input name="FirstName" type="text" class="form-control col" placeholder="Enter First Name" />
                        </div>
                        <div class="form-group col-6">
                            <p>Last Name</p>
                            <input name="LastName" type="text" class="form-control col" placeholder="Enter Last Name" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <p>Date of Birth</p>
                            <input name="DateOfBirth" type="date" class="form-control col" />
                        </div>
                        <div class="form-group col-6">
                            <p>Email Address</p>
                            <input name="EmailAddress" type="email" class="form-control col" placeholder="Enter Email" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <p>Vehicle Make</p>
                            <input name="CarMake" type="text" class="form-control col" placeholder="Enter Vehicle Make" />
                        </div>
                        <div class="form-group col-6">
                            <p>Vehicle Model</p>
                            <input name="CarModel" type="text" class="form-control col" placeholder="Enter Vehicle Model" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <p>Vehicle Year</p>
                            <input name="CarYear" type="text" class="form-control col" placeholder="Enter Vehicle Year" />
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <input name="Coverage" type="radio" class="form-check-input" value="Full Coverage" />
                        <p class="form-check-inline pr-4">Full Coverage</p>
                        <input name="Coverage" type="radio" class="form-check-input" value="Liability" />
                        <p class="form-check-inline">Liability</p>
                    </div>
                    <div class="form-group form-check">
                        <p class="pr-5 form-check-inline">Have you ever had a DUI?</p>
                        <input name="DUI" type="radio" class="form-check-input" value="Yes" />
                        <p class="form-check-inline pr-4">Yes</p>
                        <input name="DUI" type="radio" class="form-check-input" value="No" />
                        <p class="form-check-inline">No</p>
                    </div>
                    <div class="form-inline col">
                        <div class="form-group mr-4 mt-2">
                            <p class="">How many speeding tickets you have had?</p>                            
                        </div>                        
                        <div class="form-group">
                            <input name="SpeedingTickets" type="text" class="form-control" placeholder="Enter Number" />
                        </div>
                    </div>
                    <button type="submit" class="btn w-25 mt-4 btn-primary">Submit</button>
                }
            </div>
        </div>
    </div> 
</div>



